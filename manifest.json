{
    "name": "Dad & Alex Workout Tracker",
    "short_name": "Workout",
    "description": "Personal workout tracker for Dad and Alex with progress tracking and exercise guides",
    "version": "1.0.2",
    "start_url": "/workout-tracker/",
    "id": "/workout-tracker/",
    "display": "standalone",
    "orientation": "portrait",
    "theme_color": "#3b82f6",
    "background_color": "#f3f4f6",
    "categories": ["fitness", "health", "lifestyle"],
    "launch_handler": {
        "client_mode": ["focus-existing", "auto"]
    },
    "display_override": ["standalone", "minimal-ui"],
    "icons": [
        {
            "src": "icons/maskable_icon_x48.png",
            "sizes": "48x48",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "icons/maskable_icon_x72.png",
            "sizes": "72x72",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "icons/maskable_icon_x96.png",
            "sizes": "96x96",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "icons/maskable_icon_x128.png",
            "sizes": "128x128",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "icons/maskable_icon_x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "icons/maskable_icon_x384.png",
            "sizes": "384x384",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "icons/maskable_icon_x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        }
    ],
    "screenshots": [
           {
            "src": "screenshots/workout.png",
            "sizes": "1170x2532",
            "type": "image/png",
            "platform": "narrow",
            "label": "Workout tracking screen"
        }
    ],
    "shortcuts": [
        {
            "name": "Start Workout",
            "short_name": "Workout",
            "description": "Begin today's workout",
            "url": "/workout-tracker/er/workout.html",
            "icons": [{ "src": "icons/maskable_icon_x96.png", "sizes": "96x96" }]
        },
        {
            "name": "View Progress",
            "short_name": "Progress",
            "description": "Check your workout progress",
            "url": "/workout-tracker/progress.html",
            "icons": [{ "src": "icons/maskable_icon_x96.png", "sizes": "96x96" }]
        }
    ],
    "edge_side_panel": {
        "preferred_width": 400
    },
    "dir": "ltr",
    "lang": "en",
    "prefer_related_applications": false,
    "scope": "/workout-tracker/",
    "handle_links": "preferred",
    "permissions": [
        "storage"
    ]
}
